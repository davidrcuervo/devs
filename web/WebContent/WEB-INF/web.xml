<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
	<display-name>Web</display-name>
	<servlet>
	  <servlet-name>raiz</servlet-name>
	  <servlet-class>com.laetienda.web.servlets.Root</servlet-class>
	</servlet>
	<servlet-mapping>
	  <servlet-name>raiz</servlet-name>
	  <url-pattern></url-pattern>
	  <url-pattern>/home</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>dap</servlet-name>
		<servlet-class>com.laetienda.dap.Servlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>dap</servlet-name>
		<url-pattern>/session/*</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>lang</servlet-name>
		<servlet-class>com.laetienda.lang.Servlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>lang</servlet-name>
		<url-pattern>/lang/*</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>multimedia</servlet-name>
		<servlet-class>com.laetienda.multimedia.Servlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>multimedia</servlet-name>
		<url-pattern>/media/*</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>wiki</servlet-name>
		<servlet-class>com.laetienda.notes.Servlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>wiki</servlet-name>
		<url-pattern>/wiki/*</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>thankyou</servlet-name>
		<servlet-class>com.laetienda.tomcat.Thankyou</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>thankyou</servlet-name>
		<url-pattern>/thankyou/*</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>crud</servlet-name>
		<servlet-class>com.laetienda.form.Servlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>crud</servlet-name>
		<url-pattern>/crud/*</url-pattern>
	</servlet-mapping>
	<listener>
		<listener-class>
  			com.laetienda.tomcat.Load
		</listener-class>
	</listener>
	<filter>
		<filter-name>lang</filter-name>
		<filter-class>com.laetienda.lang.LangFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>lang</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>pathParts</filter-name>
		<filter-class>com.laetienda.tomcat.PathParts</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>pathParts</filter-name>
		<url-pattern>/</url-pattern>
		<url-pattern>/home</url-pattern>
		<url-pattern>/web/*</url-pattern>
		<url-pattern>/lang/*</url-pattern>
		<url-pattern>/media/*</url-pattern>
		<url-pattern>/wiki/*</url-pattern>
		<url-pattern>/session/*</url-pattern>
		<url-pattern>/thankyou/*</url-pattern>
		<url-pattern>/crud/*</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>page</filter-name>
		<filter-class>com.laetienda.tomcat.PageFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>page</filter-name>
		<url-pattern>/</url-pattern>
		<url-pattern>/home</url-pattern>
		<url-pattern>/web/*</url-pattern>
		<url-pattern>/lang/*</url-pattern>
		<url-pattern>/media/*</url-pattern>
		<url-pattern>/wiki/*</url-pattern>
		<url-pattern>/session/*</url-pattern>
		<url-pattern>/thankyou/*</url-pattern>
		<url-pattern>/crud/*</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>acl</filter-name>
		<filter-class>com.laetienda.acl.AclFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>acl</filter-name>
		<url-pattern>/</url-pattern>
		<url-pattern>/home</url-pattern>
		<url-pattern>/crud/*</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>dap</filter-name>
		<filter-class>com.laetienda.dap.DapFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>dap</filter-name>
		<url-pattern>/crud/*</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>options</filter-name>
		<filter-class>com.laetienda.options.OptionFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>options</filter-name>
		<url-pattern>/session/*</url-pattern>
	</filter-mapping>
</web-app>